<% include ../partials/header.ejs %>


<div class="container">

    <header class="jumbotron text-center">
        <div class="container">
            <h1>Welcome to campgrounds!</h1>
            <p>View the best campgroudns from all over the world</p>

            <p>
                <a class="btn btn-lg btn-primary" href="/campgrounds/new">Make new campground</a>
            </p>
            <form action="/campgrounds" method="get" class="form-inline">
                <div class="form-group">
                    <input type="text" name="search" placeholder="Search" class="form-control">
                    <button class="btn btn-default">Search</button>
                </div>
            </form>

        </div>

    </header>


    <div class="row text-center">

        <% campgrounds.forEach(function (camp) { %>
        <div class="col-md-4 col-sm-6">

            <div class="thumbnail">
                <img src="<%= camp.img %>">
                <div class="caption">
                    <p><%= camp.name %></p>
                </div>
                <p>
                    <a href="/campgrounds/<%= camp._id %>" class="btn btn-default btn-sm">Show More</a>
                </p>

            </div>
        </div>
        <% }) %>

    </div>

</div>

<% include ../partials/footer.ejs %>
