<% include ../partials/header.ejs %>

<div class="container">
    <div class="row ">
        <h1 style="text-align: center">Update Campground: <%= camp.name%></h1>
        <div style="margin: 50px auto; width: 40%">
            <form method="post" action="/campgrounds/<%=camp._id%>?_method=PUT">
                <div class="form-group">
                    <input class="form-control" name="post[name]" type="text" placeholder="name" value="<%= camp.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" name="post[img]" type="url" placeholder="img" value="<%= camp.img%>">
                </div>
                <div class="form-group">
                    <input class="form-control" name="post[price]" type="number" placeholder="Price" min=".1" step=".1" value="<%= camp.price%>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="post[desc]" type="text" placeholder="desc:" rows="5"><%= camp.desc%></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block" type="submit">Submit</button>
                </div>


            </form>
            <a href="/campgrounds">Go back</a>

        </div>
    </div>
</div>


<% include ../partials/footer.ejs %>