<% include ../partials/header.ejs %>

<div class="container">
    <div class="row ">
        <h1 style="text-align: center">Add new Comment to <%= campground.name%></h1>
        <div style="margin: 50px auto; width: 40%">
            <form method="post" action="/campgrounds/<%= campground._id%>/comments">
                <div class="form-group">
                    <input class="form-control" name="comment[text]" type="text" placeholder="Comment">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block" type="submit">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id%>">Go back</a>

        </div>
    </div>
</div>


